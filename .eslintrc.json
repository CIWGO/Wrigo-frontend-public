{
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": ["plugin:react/recommended", "standard"],
    "overrides": [],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
      "semi": ["error", "always"],
      "quotes": ["warn", "double"],
      "max-len": [0, 120, 4],
      "no-tabs": 0,
      "indent": ["error", "tab"],
      "react/react-in-jsx-scope": "off",
      "react/prop-types": 0
    }
  }